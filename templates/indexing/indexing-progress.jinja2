<div class="container text-center">
    <div class="row">
        <div class="col">
            <div hx-get="/index" hx-trigger="load delay:500ms" hx-target="this" hx-swap="outerHTML">
                <p>Indexed {{ replaysDoneCount }} outta {{ replaysToDoCount }} replays ({{
                    progressPercentage * 100 }}%).</p>
                <div class="progress" role="progressbar" aria-label="Scan progress"
                    aria-valuenow="{{ progressPercentage }}" aria-valuemin="0" aria-valuemax="100">
                    <div id="progressBar" class="progress-bar progress-bar-animated"
                        style="width: {{ progressPercentage * 100 }}%"></div>
                </div>
            </div>
        </div>
    </div>
</div>