<div class="container">
    {% if len(labels) < 1 %} <div class="row">
        <p>You haven't defined any labels yet.</p>
</div>
{% else %}
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Label</th>
                <th scope="col">Color</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for idx, label in labels %}
            <th scope="row">{{ idx }}</th>
            <td>{{ label.text }}</td>
            <td>{{ label.color }}</td>
            <td>Not yet implemented.</td>
        </tbody>
    </table>
</div>
{% endif %}